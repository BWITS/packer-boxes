{
  "builders": [
    {
      "boot_command": [
        "<esc><wait>",
        "install <wait>",
        "preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/ks.cfg <wait>",
        "auto <wait>",
        "debian-installer=en_US <wait>",
        "locale=en_US <wait>",
        "netcfg/get_hostname=localhost <wait>",
        "netcfg/get_domain=localhost <wait>",
        "keymap=us <wait>",
        "<enter><wait>"
      ]
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "scripts": [
        "scripts/vagrant.sh"
      ],
      "execute_command": "echo '{{user `ssh_password`}}' | {{.Vars}} sudo -S -E bash '{{.Path}}'"
    },
    {
      "type": "shell",
      "scripts": [
        "scripts/cleanup.sh"
      ],
      "execute_command": "echo '{{user `ssh_password`}}' | {{.Vars}} sudo -S -E bash '{{.Path}}'"
    }
  ],
  "post-processors": [[
    {
      "type": "vagrant",
      "keep_input_artifact": false,
      "only": ["vagrant"]
    },
    {
      "type": "atlas",
      "artifact": "{{user `atlas_user`}}/{{user `template_name`}}",
      "artifact_type": "vagrant.box",
      "metadata": {
          "created_at": "{{timestamp}}",
          "provider": "virtualbox",
          "version": "{{user `version`}}"
      },
      "only": ["vagrant"]
    }
  ]]
}
