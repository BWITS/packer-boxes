{
  "variables": {
    "memory_size": "1024",
    "cpu_count": "1"
  },
  "builders": [
    {
      "name": "{{user `build_format`}}",

      "iso_url": "{{user `iso_url`}}",
      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_checksum_type": "{{user `iso_checksum_type`}}",

      "boot_wait": "5s",
      "disk_size": 10240,
      "boot_command": [
        "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/ks.cfg<enter>"
      ],

      "http_directory": ".",

      "ssh_password": "vagrant",
      "ssh_username": "vagrant",
      "ssh_wait_timeout": "60m",

      "shutdown_command": "sudo -S /sbin/halt -h -p"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "scripts": [
        "scripts/packages.sh",
        "scripts/docker.sh",
        "scripts/vagrant.sh"
      ],
      "execute_command": "echo 'vagrant' | {{.Vars}} sudo -S -E bash '{{.Path}}'"
    },
    {
      "type": "shell",
      "scripts": [
        "scripts/lang/golang.sh",
        "scripts/lang/python.sh",
        "scripts/lang/ruby.sh",
        "scripts/lang/nodejs.sh"
      ],
      "execute_command": "echo 'vagrant' | {{.Vars}} sudo -S -E bash '{{.Path}}'"
    },
    {
      "type": "shell",
      "scripts": [
        "scripts/vm-tools.sh"
      ],
      "execute_command": "echo 'vagrant' | {{.Vars}} sudo -S -E bash '{{.Path}}'",
      "only": ["vagrant"]
    },
    {
      "type": "shell",
      "scripts": [
        "scripts/cleanup.sh"
      ],
      "execute_command": "echo 'vagrant' | {{.Vars}} sudo -S -E bash '{{.Path}}'"
    }
  ],
  "post-processors": [[
    {
      "type": "vagrant",
      "keep_input_artifact": false,
      "only": ["vagrant"]
    },
    {
      "type": "atlas",
      "artifact": "{{user `atlas_user`}}/{{user `template_name`}}",
      "artifact_type": "vagrant.box",
      "metadata": {
          "created_at": "{{timestamp}}",
          "provider": "virtualbox",
          "version": "{{user `version`}}"
      },
      "only": ["vagrant"]
    }
  ]],
  "push": {
    "exclude": [
      ".*", "*.box", "output-*", "packer_cache", "*.json"
    ]
  }
}
