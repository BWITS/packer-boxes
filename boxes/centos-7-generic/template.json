{
  "builders": [
    {
      "boot_command": [
        "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/ks.cfg<enter>"
      ]
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "scripts": [
        "scripts/vagrant.sh",
        "scripts/packages.sh",
        "scripts/docker.sh",
        "scripts/cleanup.sh"
      ],
      "execute_command": "{{.Vars}} bash '{{.Path}}'"
    }
  ],
  "post-processors": [[
    {
      "type": "vagrant",
      "keep_input_artifact": false,
      "only": ["vagrant"]
    },
    {
      "type": "atlas",
      "artifact": "{{user `atlas_user`}}/{{user `template_name`}}",
      "artifact_type": "vagrant.box",
      "metadata": {
          "created_at": "{{timestamp}}",
          "provider": "virtualbox",
          "version": "{{user `version`}}"
      },
      "only": ["vagrant"]
    }
  ]]
}
