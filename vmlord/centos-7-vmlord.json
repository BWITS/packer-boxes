{
  "variables": {
      "template_name": "centos-7-vmlord"
  },
  "builders": [
    {
      "name": "vbox",
      "vm_name": "{{user `template_name`}}",
      "type": "virtualbox-iso",
      "guest_os_type": "RedHat_64",

      "iso_url": "{{user `iso_url`}}",
      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_checksum_type": "{{user `iso_checksum_type`}}",

      "boot_wait": "10s",
      "disk_size": 20480,
      "boot_command": [
        "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/ks.cfg<enter>"
      ],

      "http_directory": "http",

      "ssh_username": "root",
      "ssh_password": "",
      "ssh_wait_timeout": "60m",

      "vboxmanage": [
        [
          "modifyvm",
          "{{.Name}}",
          "--memory",
          "{{user `memory_size`}}"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--cpus",
          "{{user `cpu_count`}}"
        ]
      ],
      "shutdown_command": "/sbin/halt -h -p",

      "hard_drive_interface": "scsi",
      "guest_additions_mode": "disable",
      "format": "ova",
      "export_opts": ["--options", "manifest,nomacs"]
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "scripts": [
        "scripts/packages.sh",
        "scripts/cleanup.sh",
        "scripts/cleanup.sh"
      ],
      "execute_command": "{{.Vars}} bash '{{.Path}}'"
    }
  ]
}
