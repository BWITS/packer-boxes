{
  "variables": {
    "template_name": "centos-7-devenv",
    "memory_size": "1024",
    "cpu_count": "1"
  },
  "builders": [
    {
      "name": "{{user `build_location`}}",
      "type": "virtualbox-iso",
      "guest_os_type": "RedHat_64",

      "iso_url": "{{user `iso_url`}}",
      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_checksum_type": "{{user `iso_checksum_type`}}",

      "boot_wait": "10s",
      "disk_size": 20480,
      "boot_command": [
        "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/ks-{{user `build_location`}}.cfg<enter>"
      ],

      "http_directory": "http",

      "ssh_password": "vagrant",
      "ssh_username": "vagrant",
      "ssh_wait_timeout": "60m",

      "vboxmanage": [
        [
          "modifyvm",
          "{{.Name}}",
          "--memory",
          "{{user `memory_size`}}"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--cpus",
          "{{user `cpu_count`}}"
        ]
      ],
      "shutdown_command": "sudo -S /sbin/halt -h -p"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "scripts": [
        "scripts/packages.sh",
        "scripts/docker.sh",
        "scripts/vagrant.sh"
      ],
      "execute_command": "echo 'vagrant' | {{.Vars}} sudo -S -E bash '{{.Path}}'"
    },
    {
      "type": "shell",
      "scripts": [
        "scripts/lang/golang.sh",
        "scripts/lang/python.sh",
        "scripts/lang/ruby.sh",
        "scripts/lang/nodejs.sh"
      ],
      "execute_command": "echo 'vagrant' | {{.Vars}} sudo -S -E bash '{{.Path}}'"
    },
    {
      "type": "shell",
      "scripts": [
        "scripts/vm-tools.sh"
      ],
      "execute_command": "echo 'vagrant' | {{.Vars}} sudo -S -E bash '{{.Path}}'",
      "only": ["remote"]
    },
    {
      "type": "shell",
      "scripts": [
        "scripts/cleanup.sh"
      ],
      "execute_command": "echo 'vagrant' | {{.Vars}} sudo -S -E bash '{{.Path}}'"
    }
  ],
  "post-processors": [[
    {
      "type": "vagrant",
      "keep_input_artifact": false,
      "only": ["remote"]
    },
    {
      "type": "atlas",
      "artifact": "zealic/centos-7-devenv",
      "artifact_type": "vagrant.box",
      "metadata": {
          "created_at": "{{timestamp}}",
          "provider": "virtualbox",
          "version": "{{user `version`}}"
      },
      "only": ["remote"]
    }
  ]],
  "push": {
    "name": "zealic/centos-7-devenv",
    "exclude": [".*", "*.json", "*.box", "output-*", "packer_cache", "Makefile", "Vagrantfile"]
  }
}
